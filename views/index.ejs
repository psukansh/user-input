<style>
	@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap');

	* {
		margin: 0px;
		padding: 0px;
		box-sizing: border-box;
		font-family: 'Poppins', sans-serif;
	}

	.form {
		width: 100%;
		height: 100%;
	}

	.content {
		width: 100%;
		/* background-color: rgb(0, 42, 53); */
		display: flex;
		justify-content: center;
		align-items: center;
	}

	h3 {
		color: black;
		font-size: 30px;
		font-weight: bold;

	}

	.input-box {
		display: flex;
		flex-direction: column;
	}

	.input-box input {
		margin: 10px;
		height: 40px;
		width: 600px;
		background-color: transparent;
		border: 1px solid black;
		border-radius: 3px;
	}

	.submit {
		width: 300px;
		background-color: blue;
		font-size: 15px;
		border-radius: 5px;
		outline: none;
		border: none;
		color: white;
		padding: 8px;
		cursor: pointer;
		margin: 10px;
	}

	.submit:hover {
		background-color: rgb(0, 0, 165);
	}


	.content-output {
		width: 100%;
		height: 500px;
		/* background-color: rgb(0, 42, 53); */
		display: flex;
		justify-content: center;
		align-items: center;
	}

	table {
		background-color: beige;
		padding: 20px;
		border: 1px solid black;
	}

	table td {
		margin: 10px;
	}
</style>

